<div class="container main">
{{!-- Heading area --}}
    <div class="jumbotron jumbotron-fluid">
        <div class="container">
            <p class="lead text-center">Keep Track of the workouts you have logged!</p>
        </div>
    </div>
{{!-- Add workout form --}}
    <div class="container add-workout">
        <h2 class="text-center">Tell us about your workouts</h2>
        <form class="create-form">
             <div class="form-group">
        <label for="email-login"></label>
        <input class="form-input" type="text" placeholder="Workout Name" id="workoutName" />
      </div>
      <div class="form-group">
        <label for="password-login"></label>
        <input class="form-input" type="password" placeholder="Sets" id="sets" />
      </div>
      <div class="form-group">
        <label for="password-login"></label>
        <input class="form-input" type="password" placeholder="Duration" id="duration" />
      </div>
      <div class="form-group">
        <label for="password-login"></label>
        <input class="form-input" type="password" placeholder="Reps" id="reps" />
      </div>
      <br>
      <div class="form-group">
        <button class="btn" id="submit"><a class="nav-link" href="dashboard">Add Workout</a></button>
      </div>
        </form>
    </div>
    {{!-- workout list area --}}
    <div id="workout-list">
        <div class="container workouts">
            <div class="row pb-4">
                
                    <div class="col-12 workout-col m-1">
                        <h2 class="text-center workout-heading">Workouts logged</h2>
                        <ul class="workouts">
                            {{#each workouts}}
                            {{> workouts/workout-block }}
                            {{/each}}
                        </ul>
                    </div>
            </div>
        </div>
    </div>
</div>
<script="public\js\workout.js"></script>
